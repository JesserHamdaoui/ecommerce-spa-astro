---
const { message, dir } = Astro.props;
---

<h1 lang="ar" dir={dir} id="message">{message}</h1>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@200;400;900&display=swap");

  .animated-title {
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-20px);
    }
    60% {
      transform: translateY(-10px);
    }
  }

  #message {
    font-family: Inter, sans-serif;
    font-weight: 900;
    line-height: 48px;
    font-size: 40px;
    letter-spacing: -1.2px;
    animation: bounce 1s infinite;
  }

  @media (max-width: 768px) {
    #container {
      padding-right: 10px;
      padding-top: 5px;
      padding-bottom: 5px;
      padding-left: 0px;
    }

    #message {
      font-size: 24px;
    }
  }

  @media (max-width: 480px) {
    #container {
      padding-right: 10px;
      padding-left: 5px;
      padding-top: 0px;
      padding-bottom: 0px;
    }

    #message {
      font-size: 16px;
    }
  }
</style>
